{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "plugin:lodash/recommended",
    "plugin:react-perf/all",
    "plugin:promise/recommended"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true,
    "commonjs": true
  },
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/prefer-es6-class": 0,
    "react/require-extension": 0,
    "react/require-default-props": 0,
    "react/prefer-stateless-function": 0,
    "no-console": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0,
    "global-require": 0,
    "max-len": 0,
    // ignore unused variable on functions arguments
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    // Allow annonymous functions
    "func-names":  0,
    "no-confusing-arrow": "off",
    // Configure lodash plugin to use the destructured import
    "lodash/import-scope": [2, "member"],
    // Disable useless rule (_.noop instead of empty annonnymous function)
    "lodash/prefer-noop": 0,
    // This rule is not satisfying
    "lodash/prefer-lodash-method": 0,

    // Enable mocha rules
    // See https://github.com/lo1tuma/eslint-plugin-mocha/tree/master/docs/rules
    "mocha/no-exclusive-tests": "error",
    "mocha/max-top-level-suites": "error",
    "mocha/handle-done-callback": "error",
    "mocha/no-top-level-hooks": "error",
    "mocha/no-return-and-callback": "error",
    "mocha/no-sibling-hooks": "error",
    "mocha/no-global-tests": "error",
    "mocha/no-hooks-for-single-case": "error",
    "mocha/no-mocha-arrows": "error",
    "mocha/no-nested-tests": "error",
    "mocha/no-skipped-tests": "error",
    "mocha/no-identical-title": "error",
    "mocha/no-synchronous-tests": "error"
  },
  "plugins": [
    "react",
    "lodash",
    "mocha",
    "promise",
    "react-perf"
  ],
  "globals": {
    "React": true,
    "PropTypes": true,
    "GATEWAY_HOSTNAME": true,
    "STATIC_CONFIGURATION": true,
    "API_URL": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
